tocar-parar = #FF0040
avancar = #FF0040
screenshot = #008B8B
screencast = #F0E68C
usuario = #FFF

################ Barra de cima
[bar/cima]
monitor = eDP1
width = 100%
height = 25
radius = 0.0
fixed-center = true
bottom = false
background = ${cores.barra}
foreground = ${cores.fonte}
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = Fira Sans:size=10:antialias=true;0;0
font-1 = FontAwesome:size=10;0
font-2 = feather:pixelsize=10
font-3 = siji:pixelsize=10;1
font-4 = MaterialIcons:size=10;0
font-5 = FontAwesome5:size=10;0
font-6 = Material Design Icons:size=10;0




modules-left = menu versão preparar screencast screenshot
modules-center = i3
modules-right = wireless teclado temperatura bateria hora data
cursor-click = pointer
cursor-scroll = ns-resize

################ Barra de baixo
[bar/baixo]
monitor = eDP1
width = 100%
height = 25
radius = 0.0
fixed-center = true
bottom = true
background = ${cores.barra}
foreground = ${cores.fonte}
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = Fira Sans:size=10:antialias=true;0;0
font-1 = feather:pixelsize=10
font-2 = Fira Mono:size=8;-1
font-3 = MaterialIcons:size=10;0
font-4 = FontAwesome:size=10;0
font-5 = FontAwesome5:size=10;0
font-6 = Material Design Icons:size=10;0

modules-left = som spotify
modules-center = janela
modules-right = voltar tocar-parar avancar arquivos memoria cpu usuario
cursor-click = pointer
cursor-scroll = ns-resize

################ Janela
[module/janela]
type = internal/xwindow
format-prefix = " "
format-prefix-foreground = ${cores.janela}
format = <label>
format-foreground = ${cores.janela}
format-padding = 4
label = %title%
label-maxlen = 50
label-empty = Sem janelas
label-empty-foreground = ${cores.janela}

################ Teclado
[module/teclado]
type = internal/xkeyboard
format-prefix = " "
#format-foreground = #708090
label-layout = %layout%
#label-layout-foreground = ${cores.teclado}
label-indicator-padding = 2
label-indicator-margin = 1
#label-indicator-foreground = #708090
label-indicator-foreground = #00FF00

################ Arquivos
[module/arquivos]
type = internal/fs
interval = 25
mount-0 = /
label-mounted =  %mountpoint%: %percentage_used%%
label-mounted-foreground = ${cores.arquivos}
label-unmounted = %mountpoint% Não montado
label-unmounted-foreground = ${cores.arquivos}

################ I3
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
strip-wsnumbers = true
label-mode = %mode%
label-mode-padding = 1
label-focused = %name%
label-focused-padding = 1
label-focused-foreground = ${cores.fonte}
label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-foreground = ${cores.janela}
label-visible = %name%
label-visible-padding = 1
label-visible-foreground = ${cores.selecionado}
label-urgent = %name%
label-urgent-padding = 1
label-urgent-foreground = ${cores.atencao}

