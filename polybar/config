################ Memória
[module/memoria]
type = internal/memory
interval = 0.2
format = <label>
label =  %percentage_used%%


################ Hora
[module/hora]
type = internal/date
interval = 1
time = %H:%M
format =  <label>
label = %time%


################ Data
[module/data]
type = internal/date
interval = 1
date = %d/%m
format =  <label>
label = %date%


################ Som
[module/som]
type = internal/pulseaudio
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9

format-volume = <ramp-volume> <label-volume>
label-muted =   muted
label-muted-foreground = #66

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

################ Bateria
[module/bateria]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98


format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-0-foreground = #f53c3c
ramp-capacity-1 = 
ramp-capacity-1-foreground = #ffa900
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10
bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
bar-capacity-fill = █
bar-capacity-fill-foreground = #ddffffff
bar-capacity-fill-font = 3
bar-capacity-empty = █
bar-capacity-empty-font = 3
bar-capacity-empty-foreground = #44ffffff

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

################ Temperatura
[module/temperatura]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <ramp> <label>
#format-foreground = ${cores.temperatura}
format-warn = <ramp> <label-warn>
#format-warn-foreground = ${cores.temperatura}
label = %temperature-c%
label-warn = %temperature-c%
ramp-0 = 


################ Wireless
[module/wireless]
type = internal/network
interface = wlp2s0
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-disconnected = 
label-disconnected-foreground = #66

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

animation-packetloss-0 = 
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${bar/top.foreground}
animation-packetloss-framerate = 500

################ Menu
[module/menu]
type = custom/text
content = 
content-foreground = ${cores.menu}
click-left = $HOME/.config/scripts/menu.sh &

################ Preparar/GitHub
[module/preparar]
type = custom/text
content = 
content-foreground = ${cores.preparar}
click-left = termite -e $HOME/.config/scripts/preparar.sh &

################ Versão/Instalador
[module/versão]
type = custom/text
content = 
content-foreground = ${cores.archdex}
click-left = termite -e $HOME/.config/scripts/archdex.sh &

################ Spotify
[module/spotify]
type = custom/script
label = %output%
label-maxlen = 50
label-foreground = ${cores.spotify}
exec = $HOME/.config/scripts/spotify.sh

################ Controlador voltar
[module/voltar]
type = custom/text
content = 
content-foreground = ${cores.voltar}
click-left = playerctl previous

################ Controlador play & pause
[module/tocar-parar]
type = custom/text
content =  
content-foreground = ${cores.tocar-parar}
click-left = playerctl play-pause

################ Controlador avançar
[module/avancar]
type = custom/text
content = 
content-foreground = ${cores.avancar}
click-left = playerctl next

################ Screenshot
[module/screenshot]
type = custom/text
content = 
content-foreground = ${cores.screenshot}
click-left = $HOME/.config/scripts/screenshot.sh &

################ Screencast
[module/screencast]
type = custom/script
interval = 1
label = %output%
label-foreground = ${cores.screencast}
click-left = termite -e $HOME/.config/scripts/screencast.sh &
exec = $HOME/.config/scripts/screencast.sh status
tail = true

################ Usuário
[module/usuario]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = #00FF00	
exec = echo $USER
format-foreground = ${cores.usuario}

################ Settings
[settings]
screenchange-reload = true

################ WM
[global/wm]
margin-top = 5
margin-bottom = 5

